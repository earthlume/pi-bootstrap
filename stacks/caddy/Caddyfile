*.lab.hoens.fun {
	tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
		# Disable local propagation checks â€” OPNsense redirects port 53 to
		# Unbound, which intercepts queries to 1.1.1.1/8.8.8.8 and has no
		# knowledge of the ACME TXT record. Let's Encrypt validates externally.
		propagation_timeout -1
		propagation_delay 30s
	}

	@chat host chat.lab.hoens.fun
	handle @chat {
		reverse_proxy localhost:8080
	}

	@dockge host dockge.lab.hoens.fun
	handle @dockge {
		reverse_proxy localhost:5001
	}

	handle {
		respond "Nothing here, m'boy." 404
	}
}
